<UserControl
    x:Class="DeskMind.Plugin.PythonRunner.WPF.Views.PythonRunnerUIControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:DeskMind.Plugin.PythonRunner.WPF.Helpers"
    xmlns:local="clr-namespace:DeskMind.Plugin.PythonRunner.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DeskMind.Plugin.PythonRunner.WPF.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Script Tree  -->
        <StackPanel Grid.Column="0">
            <Button
                Margin="5"
                Command="{Binding AddScriptCommand}"
                Content="Add Script" />
            <Button
                Margin="5"
                Command="{Binding RemoveScriptCommand}"
                Content="Remove Script" />
            <TreeView helpers:TreeViewSelectedItemBehavior.SelectedItem="{Binding SelectedScript, Mode=TwoWay}" ItemsSource="{Binding Scripts}">>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Name}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </StackPanel>

        <!--  Script Editor  -->
        <DockPanel Grid.Column="1">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button
                    Margin="5"
                    Command="{Binding SaveScriptCommand}"
                    Content="Save" />
                <Button
                    Margin="5"
                    Command="{Binding ValidateScriptCommand}"
                    Content="Validate" />
                <Button
                    Margin="5"
                    Command="{Binding EditRequirementsCommand}"
                    Content="Edit Requirements" />
            </StackPanel>

            <avalonedit:TextEditor
                Document="{Binding Document, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                FontFamily="Consolas"
                FontSize="14"
                ShowLineNumbers="True"
                SyntaxHighlighting="Python" />
        </DockPanel>
    </Grid>
</UserControl>