<UserControl
    x:Class="DeskMind.Plugin.PythonRunner.WPF.Views.PythonRunnerUIControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="clr-namespace:WPFLocalizeExtension.Extensions;assembly=WPFLocalizeExtension"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <d:ResourceDictionary>
            <d:ResourceDictionary.MergedDictionaries>
                <ui:ControlsDictionary />
                <ui:ThemesDictionary Theme="Light" />
            </d:ResourceDictionary.MergedDictionaries>
        </d:ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <!--  Left: Script folders list  -->
        <DockPanel Grid.Column="0" Margin="6">
            <StackPanel
                Margin="0,0,0,6"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <ui:Button
                    Width="100"
                    Margin="0,0,6,0"
                    Command="{Binding AddScriptFolderCommand}"
                    Content="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Side_Add}"
                    Icon="{ui:SymbolIcon Symbol=FolderAdd20}" />
                <ui:Button
                    Width="100"
                    Command="{Binding RemoveScriptFolderCommand}"
                    Content="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Side_Delete}"
                    Icon="{ui:SymbolIcon Delete24}" />
            </StackPanel>
            <Border
                Padding="6"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1"
                CornerRadius="6">
                <ListBox
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding ScriptFolders}"
                    SelectedItem="{Binding SelectedFolder, Mode=TwoWay}" />
            </Border>
        </DockPanel>
        <GridSplitter Grid.Column="1" />
        <!--  Right: Editor Area  -->
        <DockPanel Grid.Column="2" Margin="6">
            <!--  Top menu  -->
            <Menu
                Background="Transparent"
                DockPanel.Dock="Top"
                FontSize="14"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                <ui:MenuItem
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_File_Menu}"
                    Icon="{ui:SymbolIcon DocumentSplitHint20}">
                    <ui:MenuItem Command="{Binding AddScriptFolderCommand}" Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_File_NewFolder}" />
                    <Separator />
                    <ui:MenuItem Command="{Binding SaveScriptCommand}" Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_File_SaveScript}" />
                    <ui:MenuItem Command="{Binding SaveRequirementsCommand}" Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_File_SaveRequirements}" />
                    <ui:MenuItem Command="{Binding SaveMetadataCommand}" Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_File_SaveMetadata}" />
                </ui:MenuItem>
                <ui:MenuItem Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Edit_Menu}" Icon="{ui:SymbolIcon DocumentEdit20}">
                    <ui:MenuItem Command="ApplicationCommands.Copy" Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Edit_Copy}" />
                    <ui:MenuItem Command="ApplicationCommands.Cut" Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Edit_Cut}" />
                    <ui:MenuItem Command="ApplicationCommands.Paste" Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Edit_Paste}" />
                    <Separator />
                    <ui:MenuItem Command="ApplicationCommands.SelectAll" Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Edit_SelectAll}" />
                </ui:MenuItem>
                <ui:MenuItem Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Run_Menu}" Icon="{ui:SymbolIcon Play20}">
                    <ui:MenuItem Command="{Binding ValidateScriptCommand}" Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Run_Validate}" />
                    <ui:MenuItem Command="{Binding RunScriptCommand}" Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Run_Run}" />
                </ui:MenuItem>
                <ui:MenuItem Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Tools_Menu}" Icon="{ui:SymbolIcon ScanText24}">
                    <ui:MenuItem Command="{Binding GenerateRequirementsCommand}" Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Tools_GenerateRequirements}" />
                </ui:MenuItem>
                <Separator />
                <ui:MenuItem Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Help_Menu}" Icon="{ui:SymbolIcon QuestionCircle20}">
                    <ui:MenuItem Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Help_About}" />
                </ui:MenuItem>
            </Menu>
            <!--  Optional quick actions toolbar  -->
            <ToolBar Background="Transparent" DockPanel.Dock="Top">
                <ui:Button
                    Margin="0,0,6,0"
                    Command="{Binding SaveScriptCommand}"
                    Content="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Toolbar_Save}"
                    Icon="{ui:SymbolIcon Save24}" />
                <ui:Button
                    Margin="0,0,6,0"
                    Command="{Binding ValidateScriptCommand}"
                    Content="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Toolbar_Validate}"
                    Icon="{ui:SymbolIcon CheckmarkCircle24}" />
                <ui:Button
                    Margin="0,0,6,0"
                    Command="{Binding RunScriptCommand}"
                    Content="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Toolbar_Run}"
                    Icon="{ui:SymbolIcon Play24}" />
                <Separator />
                <ui:Button
                    Margin="0,0,6,0"
                    Command="{Binding SaveRequirementsCommand}"
                    Content="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Toolbar_Reqs}"
                    Icon="{ui:SymbolIcon Save24}"
                    ToolTip="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Tooltip_SaveRequirements}" />
                <ui:Button
                    Command="{Binding GenerateRequirementsCommand}"
                    Content="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Toolbar_Generate}"
                    Icon="{ui:SymbolIcon ScanText24}"
                    ToolTip="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Tooltip_GenerateRequirements}" />
            </ToolBar>
            <!--  Tabs  -->
            <TabControl>
                <!--  Script Tab  -->
                <TabItem Foreground="{DynamicResource TextFillColorPrimaryBrush}" Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Tab_Script}">
                    <DockPanel>
                        <Border
                            Margin="0,0,0,6"
                            Padding="8"
                            Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                            CornerRadius="6"
                            DockPanel.Dock="Top">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" Text="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Side_ActiveFolder}" />
                                <TextBlock
                                    Margin="6,0,0,0"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{Binding SelectedFolder.Path}"
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>
                        </Border>
                        <Border
                            Padding="6"
                            BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                            BorderThickness="1"
                            CornerRadius="6">
                            <avalonedit:TextEditor
                                Document="{Binding ScriptDocument, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                FontFamily="Consolas"
                                FontSize="14"
                                ShowLineNumbers="True"
                                SyntaxHighlighting="Python" />
                        </Border>
                    </DockPanel>
                </TabItem>
                <!--  Requirements Tab  -->
                <TabItem Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Tab_Requirements}">
                    <DockPanel>
                        <ToolBar Background="Transparent" DockPanel.Dock="Top">
                            <ui:Button
                                Margin="0,0,6,0"
                                Command="{Binding SaveRequirementsCommand}"
                                Content="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Toolbar_Save}"
                                Icon="{ui:SymbolIcon Save24}" />
                            <ui:Button
                                Command="{Binding GenerateRequirementsCommand}"
                                Content="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Toolbar_Generate}"
                                Icon="{ui:SymbolIcon ScanText24}" />
                        </ToolBar>
                        <Border
                            Padding="6"
                            BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                            BorderThickness="1"
                            CornerRadius="6">
                            <TextBox
                                AcceptsReturn="True"
                                AcceptsTab="True"
                                FontFamily="Consolas"
                                FontSize="14"
                                Text="{Binding RequirementsText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Border>
                    </DockPanel>
                </TabItem>
                <!--  Metadata Tab  -->
                <TabItem Header="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Tab_Metadata}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,6,0,0">
                            <TextBlock Text="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Metadata_FunctionName}" />
                            <TextBox Text="{Binding Metadata.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Margin="0,6,0,0" Text="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Metadata_Description}" />
                            <TextBox AcceptsReturn="True" Text="{Binding Metadata.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Margin="0,6,0,0" Text="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Metadata_OutputType}" />
                            <TextBox Text="{Binding Metadata.OutputType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Margin="0,6,0,0" Text="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Metadata_Parameters}" />
                            <ItemsControl ItemsSource="{Binding Metadata.Parameters}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="0,3,0,3">
                                            <ui:Button
                                                Command="{Binding DataContext.RemoveParameterCommand, RelativeSource={RelativeSource AncestorType=TabItem}}"
                                                CommandParameter="{Binding}"
                                                Content="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Metadata_Remove}"
                                                DockPanel.Dock="Right"
                                                Icon="{ui:SymbolIcon Delete24}" />
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel.Resources>
                                                    <Style TargetType="FrameworkElement">
                                                        <Setter Property="Margin" Value="0,0,6,0" />
                                                    </Style>
                                                </StackPanel.Resources>
                                                <TextBox Width="140" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                <TextBox Width="120" Text="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                <TextBox Width="220" Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ui:Button
                                Width="160"
                                Command="{Binding AddParameterCommand}"
                                Content="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Metadata_AddParameter}"
                                Icon="{ui:SymbolIcon Add24}" />
                            <StackPanel Margin="0,6,0,0" Orientation="Horizontal">
                                <ui:Button
                                    Command="{Binding SaveMetadataCommand}"
                                    Content="{lex:Loc DeskMind.Plugin.PythonRunner.WPF:Strings:Py_Metadata_SaveMetadata}"
                                    Icon="{ui:SymbolIcon Save24}" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </DockPanel>
        <!--  Bottom status bar  -->
        <StatusBar Grid.Row="1" Grid.ColumnSpan="4">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Text="{Binding SelectedFolder.Path}" TextTrimming="CharacterEllipsis" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>